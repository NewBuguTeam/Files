.GroupArea{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx;
}

.GroupName{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-size-adjust: auto;
}

.GroupNameText{
  font-size: x-large;
}

.TeamCard{
  display: flex;
  width: 100%;
  height: 100%;
  font-size: larger;
  color: white;
  text-align: center;
  justify-content: center;
  border-radius: 5%;
  margin: 5rpx;
}

.container{
  display: flex;
  height: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}