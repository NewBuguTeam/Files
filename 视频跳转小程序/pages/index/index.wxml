
<video id="myVideo" controls src="{{src}}" enable-danmu="true" danmu-btn="true">
</video>

<view class="danmuArea">
  <input type="text" placeholder="请输入弹幕内容" bindinput="getDanmu">
  </input>
  <button bindtap="sendDanmu">
  发送弹幕
  </button>
</view>

<view class="videoList">
  <view class='videoBar' wx:for='{{list}}' wx:key='video{{index}}' bindtap="playVideo" data-url="{{item.videoUrl}}">
    <image src="/image/play.jpg"></image>
    <text>{{item.title}}</text>
  </view>
</view>